#!/usr/bin/make -f

%:
	dh $@ --parallel --buildsystem=cmake

override_dh_auto_configure:
	dh_auto_configure -- -DARCH=default

override_dh_auto_test:

override_dh_install:
	mkdir -p debian/tmp/usr/lib/lthn
	cp debian/letheand-fetchbc.sh debian/tmp/usr/lib/lthn/
	cp obj-$$(uname -m)-linux-gnu/bin/lethean-blockchain-export debian/tmp/usr/bin/
	cp obj-$$(uname -m)-linux-gnu/bin/lethean-blockchain-import debian/tmp/usr/bin/ 
	dh_install

override_dh_installinit:
	dh_installinit -p lethean-daemon
	dh_installinit -p lethean-wallet-rpc
	dh_installinit -p lethean-wallet-vpn-rpc

override_dh_missing:
	dh_missing --fail-missing

override_dh_auto_clean:
	rm -rf "$(FAKEHOME)"
	dh_auto_clean
